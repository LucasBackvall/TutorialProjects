@model MovieRentals.Models.ViewModels.CustomerIndexViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
@if (Model.Customers.Count == 0)
{
    <p>There are no customers yet.</p>
}
else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li><a href="Customers/Details/@customer.Id">@customer.Name</a></li>
        }
    </ul>
}


