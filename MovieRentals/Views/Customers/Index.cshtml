@model MovieRentals.Models.ViewModels.CustomerIndexViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
@if (Model.Customers.Count == 0)
{
    <p>There are no customers yet.</p>
}
else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
        <li>@Html.ActionLink(customer.Name, String.Format("Details/{0}", customer.Id)) </li>
        }
    </ul>
}


